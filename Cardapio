    <script>
        document.addEventListener("DOMContentLoaded", () => {
            // Seleciona todos os botões de adicionar ao pedido
            const addToOrderButtons = document.querySelectorAll(".add-to-order-btn");
    
            addToOrderButtons.forEach(button => {
                button.addEventListener("click", () => {
                    alert("Item adicionado ao pedido!");
                    // Aqui você pode adicionar o item ao pedido do usuário
                    // Exemplo: adicionar ao carrinho ou salvar em uma variável
                });
            });
        });
    
        function toggleOptions(optionsId, icon) {
            const optionsDiv = document.getElementById(optionsId);
            optionsDiv.classList.toggle('hidden');
            const expanded = optionsDiv.classList.contains('hidden');
            icon.setAttribute('aria-expanded', !expanded);
        }
    
        function validateForm() {
            const items = document.querySelectorAll('.add-to-order-btn');
            if (items.length === 0) {
                alert("Por favor, selecione pelo menos um item para fazer o pedido.");
                return false;
            }
            return true;
        }
    </script>
    
